$(document).ready(function(){if($(".product-slider").owlCarousel({loop:!1,margin:30,nav:!1,autoHeight:!0,dots:!0,arrows:!0,responsive:{0:{items:1},768:{items:2},1e3:{items:4}}}),$(".news-slider").owlCarousel({loop:!1,margin:30,nav:!1,autoHeight:!0,dots:!0,responsive:{0:{items:1},990:{items:2}}}),$(".video-thumb").on("click",function(ev){$(".video-thumb").addClass("hide-image"),$("#video")[0].src+="&autoplay=1",ev.preventDefault()}),$(".nice-select").niceSelect(),window.location.pathname=="/"&&$("#SortBy").val("").niceSelect("update"),window.location.search.indexOf("sort_by")>-1){var value=getQueryParam("sort_by",location.search);value!="Sort+By"&&$("#SortBy").val(value).niceSelect("update")}if(window.location.href.indexOf("all/")>-1){var elem=window.location.href.split("all/")[1];if(elem.indexOf("?")>-1){var elem2="/collections/all/"+elem.split("?")[0];$("#BrowseBy").val(elem2).niceSelect("update")}else elem="/collections/all/"+elem,console.log(elem),$("#BrowseBy").val(elem).niceSelect("update")}var $toggleButton=$(".toggle-button"),$menuWrap=$(".menu-wrap"),$sidebarArrow=$(".sidebar-menu-arrow");$menuOverlay=$(".menu-overlay"),$toggleButton.on("click",function(){$(this).toggleClass("button-open"),$menuWrap.toggleClass("menu-show"),$menuOverlay.toggleClass("overlay-open")}),$menuOverlay.on("click",function(){$(this).removeClass("overlay-open"),$toggleButton.removeClass("open"),$menuWrap.toggleClass("menu-show")}),$sidebarArrow.click(function(){$(this).next().slideToggle(300)})});function getQueryParam(key,url){var value=RegExp(""+key+"[^&]+").exec(url);return unescape(value?value.toString().replace(/^[^=]+./,""):"")}
